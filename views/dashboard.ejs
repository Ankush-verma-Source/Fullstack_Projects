<% layout('layouts/boilerplate') %>
<style>
  html,
  body {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
    overflow: hidden; /* Prevent full-page scroll */
    background-color: #e9efff;
    transition: background-color 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .container {
    max-width: 100%;
    padding: 0;
    display: flex;
    height: 100vh; /* Full viewport height */
    overflow: hidden; /* Prevent page scroll */
    /* width: 100%; */
  }

  .sidebar {
    min-width: 250px;
    height: 100vh; /* Sidebar fixed height */
    background: linear-gradient(135deg, #5a4fcf 0%, #7a5ed0 100%);
    color: white;
    transition: transform 0.3s ease;
    position: relative;
    z-index: 1000;
    overflow-y: auto; /* Optional: scroll sidebar if content overflows */
  }

  .sidebar.hidden {
    display: none;
  }

  .close-btn {
    position: absolute;
    top: 15px;
    right: 15px;
    background: none;
    border: none;
    color: white;
    font-size: 1.5rem;
    cursor: pointer;
    transition: color 0.3s;
  }

  .close-btn:hover {
    color: #ffcccc;
  }

  .sidebar a {
    color: white;
    text-decoration: none;
    padding: 10px 15px;
    border-radius: 5px;
    display: block;
    transition: background-color 0.3s;
  }

  .sidebar a:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }

  .content {
    flex-grow: 1;
    overflow-y: auto; /* Enable vertical scroll */
    height: 100vh;
    padding: 20px 45px;
    box-sizing: border-box;
  }

  .card {
    margin-bottom: 20px;
    border-radius: 12px;
    box-shadow: 0 4px 12px rgba(90, 79, 207, 0.2);
    transition: transform 0.3s;
  }

  .card:hover {
    transform: translateY(-5px);
  }

  .card-title {
    color: #4a3c8c;
  }

  .btn-primary {
    background: linear-gradient(90deg, #5a4fcf 0%, #7a5ed0 100%);
    border: none;
    transition: background 0.3s;
  }

  .btn-primary:hover {
    background: linear-gradient(90deg, #7a5ed0 0%, #5a4fcf 100%);
  }

  .reopen-area {
    position: fixed;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    background: #5a4fcf;
    color: white;
    width: 30px;
    height: 80px;
    display: none;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: background 0.3s;
    z-index: 2000;
  }

  .reopen-area:hover {
    background: #7a5ed0;
  }

  .reopen-area i {
    font-size: 20px;
    color: white;
  }

  /* gogo */
  .content-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 20px;
    margin-top: 20px;
  }

  .content-card {
    max-width:500px;
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0 4px 12px rgba(90, 79, 207, 0.12);
    /* padding: 20px; */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    border-top: 6px solid #5a4fcf;
  }

  .content-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 6px 20px rgba(90, 79, 207, 0.2);
  }

  .content-card h3 {
    font-size: 1.2rem;
    color: #5a4fcf;
    margin-bottom: 10px;
  }

  .content-card p {
    margin: 5px 0;
    font-size: 0.8rem;
    color: #333;
  }

  .content-card a {
    display: inline-block;
    margin-top: 12px;
    padding: 8px 12px;
    background: #5a4fcf;
    color: #fff;
    border-radius: 6px;
    text-decoration: none;
    font-size: 0.9rem;
    transition: background 0.3s ease;
    transform: scale( 0.9);
  }

  .content-card a:hover {
    background: #483ab1;
  }

  .content-card::before {
    content: "üìÑ";
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 1.5rem;
    color: #dadada;
  }
  .content-card h3 {
  font-size: 1rem;
  display: flex;
  align-items: center;
  gap: 6px;
  color: #444;
}

/* gogogo more */
.dashboard-main {
  display: flex;
  flex-direction: column;
  gap: 25px;
  padding: 10px 0;
}

.filter-form {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  align-items: flex-end;
  background: #f1f5ff;
  padding: 15px 20px;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(90, 79, 207, 0.08);
}

.filter-form .form-group {
  display: flex;
  flex-direction: column;
}

.filter-form label {
  font-weight: 500;
  margin-bottom: 5px;
  color: #333;
}

.filter-form select,
.filter-form input[type="month"] {
  padding: 6px 10px;
  border: 1px solid #ccc;
  border-radius: 6px;
  font-size: 0.9rem;
}

.btn-filter {
  background: #5a4fcf;
  color: white;
  padding: 8px 14px;
  border: none;
  border-radius: 6px;
  font-weight: bold;
  cursor: pointer;
  transition: background 0.3s ease;
}

.btn-filter:hover {
  background: #4739c0;
}

.content-card {
  /* background: white; */
  padding: 15px 20px;
  /* border-radius: 10px; */
  /* box-shadow: 0 4px 10px rgba(90, 79, 207, 0.1); */
  /* transition: transform 0.2s ease; */
}

.content-card h3 {
  margin: 0 0 10px;
  color: #4a3c8c;
  /* font-size: 1.1rem; */
}

.btn-delete {
  background: #c40c0c;
  color: white;
  border: none;
  padding: 6px 8px;
  border-radius: 6px;
  font-weight: bold;
  cursor: pointer;
  margin-top: 5px;

  transform: scale( 0.9);
}

.btn-delete:hover {
  background: #c53030;
}
.utilbtn-container{
    display: flex;
    justify-content: space-between;
}

  @media (max-width: 500px) {
    .sidebar {
      min-width: 200px;
    }
  }

  @media (max-width: 440px) {
    .content {
      position: absolute;
      z-index: 300;
    }
  }
</style>

<div class="container">
  <div class="sidebar p-3" id="sidebar">
    <button class="close-btn" onclick="toggleDashboard()">
      <i class="fas fa-times"></i>
    </button>
    <h2>Dashboard</h2>
    <!-- <hr> -->
    <ul class="nav flex-column">
      <li class="nav-item">
        <a class="nav-link" href="#">Profile</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Settings</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Reports</a>
      </li>
    </ul>
  </div>

  <div class="content" id="content">
    <!-- <h1>Welcome to Your Dashboard</h1> -->
    <h1>Your Generated Content</h1>

<div class="dashboard-main">
  <form class="filter-form" method="GET" action="/dashboard/filter">
    <div class="form-group">
      <label for="type">Filter by Type:</label>
      <select name="type" id="type">
        <option value="">All</option>
        <option value="mcq">MCQ</option>
        <option value="summary">Summary</option>
        <option value="quiz">Quiz</option>
      </select>
    </div>

    <!-- <div class="form-group">
      <label for="date">By Month:</label>
      <input type="month" name="date" />
    </div> -->

    <button type="submit" class="btn-filter">Apply</button>
  </form>

  <% if (contents.length === 0) { %>
    <p>No content generated yet.</p>
  <% } else { %>
    <div class="content-grid">
      <% contents.forEach(c => { %>
        <div class="content-card">
          <h3>
            <% if (c.type === "mcq") { %>üß† MCQ
            <% } else if (c.type === "summary") { %>üìù Summary
            <% } else if (c.type === "quiz") { %>üéØ Quiz
            <% } %>
          </h3>
          <p><strong>File ID:</strong> <%= c.fileId %></p>
          <p><strong>Date:</strong> <%= new Date(c.createdAt).toLocaleString("en-IN") %></p>
          <div class="utilbtn-container">
                <a href="/dashboard/view/<%= c._id %>">üìÑ View</a>
                <form action="/dashboard/delete/<%= c._id %>" method="POST" style="margin-top: 8px;">
                    <button type="submit" class="btn-delete" onclick="return confirm('Are you sure?')">üóë Delete</button>
                </form>
          </div>

        </div>
      <% }) %>
    </div>
  <% } %>
</div>


  <div class="reopen-area" id="reopen-area" onclick="toggleDashboard()">
    <i class="fas fa-arrow-right"></i>
  </div>
</div>

<script>
  function toggleDashboard() {
    const sidebar = document.getElementById("sidebar");
    const reopenArea = document.getElementById("reopen-area");
    const isHidden = sidebar.classList.toggle("hidden"); // Toggle the hidden class
    reopenArea.style.display = isHidden ? "flex" : "none"; // Show/hide reopen area
  }
</script>
