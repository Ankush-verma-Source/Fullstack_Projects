

<% if (error && error.length) { %>
  <div class="alert alert-danger alert-dismissible fade show w-50 mx-auto mt-3 text-center" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if (success && success.length) { %>
  <div class="alert alert-success alert-dismissible fade show w-50 mx-auto mt-3 text-center" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>


